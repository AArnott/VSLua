<UserControl x:Class="Microsoft.VisualStudio.LuaLanguageService.Formatting.OptionPages.UserControls.GeneralUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.VisualStudio.LuaLanguageService.Formatting.OptionPages.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="498">
    <Grid>
        <GroupBox x:Name="generalGroupBox" Header="General" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="204" Width="478">
            <Grid HorizontalAlignment="Left" Height="184" Margin="10,10,0,-13.333" VerticalAlignment="Top" Width="304">
                <CheckBox x:Name="formatOnEnterCheckbox" Content="Auto format on [Enter]" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" ToolTip="Formatting is applied on a line-by-line basis."/>
                <CheckBox x:Name="formatOnPasteCheckbox" Content="Auto format on paste" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" ToolTip="Formatting is applied on pasted text automattically."/>
                <CheckBox x:Name="formatOnBlockCheckbox" Content="Format on block" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" ToolTip="Formatting is applied on a Lua block after [Enter] is hit after the End keyword."/>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
